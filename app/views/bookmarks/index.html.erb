<p id="notice"><%= notice %></p>

<h1>Listing Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>url</th>
      <th>My description</th>
      <th>Read flag</th>
      <th>Title</th>
      <th>Favicon</th>
      <th>Object description</th>
      <th>Object image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.my_description %></td>
        <td><%= bookmark.read_flag %></td>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.favicon %></td>
        <td><%= bookmark.object_description %></td>
        <img src = <%=bookmark.object_image%> alt = "hogehoge">
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

