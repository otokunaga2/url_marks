<p id="notice"><%= notice %></p>

<h1>Listing Bookmarks</h1>

<div class="panel panel-default">
<div class = "panel-heading">Panel heading</div>
<table class="table">
  <thead>
    <tr>
      <th>url</th>
      <th>My description</th>
      <th>Read flag</th>
      <th>Title</th>
      <th>Favicon</th>
      <th>Object description</th>
      <th>Object image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="panel panel-default">
    <% @bookmarks.each do |bookmark| %>
        <td><%= bookmark.url %> </td>
        <td><%= bookmark.my_description %></td>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.read_flag %></td>
        <td><img src= <%= bookmark.object_image%>></td>
        <td><%= bookmark.object_description %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Del', bookmark, method: :delete, data: { confirm: 'delete this?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

