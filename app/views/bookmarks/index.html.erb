<p id="notice"><%= notice %></p>

<h3> ブックマーク一覧</h3>
  <%= link_to 'New Bookmark', new_bookmark_path %>
  <div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-md-1">
    <div class="thumbnail-temp">
  
    <blockquote>
    <p> <%= bookmark.created_at.to_s(:published_on) %></p>
    <a href= <%=bookmark.url%> class="thumbnail">
    <img src=<%= bookmark.object_image%>  alt="Generic placeholder thumbnail">
    </a>
    <div class="caption">
    <h3>  <%= link_to 'url', bookmark.url %></h3>
    
    <p><%= bookmark.my_description %></p>
    <p> <%= link_to 'Edit', edit_bookmark_path(bookmark) %>
    <%= link_to 'Del', bookmark, method: :delete, data: { confirm: 'delete this?' } %></p>
    
    </div>
    </div>
    </div>
    
    </blockquote>
<% end %>
<hr>
<h3> 検索一覧</h3>
<%= form_tag bookmark, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<% end %>

<br>


</div>
